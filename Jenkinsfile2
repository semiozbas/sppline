pipeline {
  agent {
    kubernetes {
      	cloud 'anthos-gke'
      }
    }
    stages {
        stage('build') {
            steps {
                sh """
		apt-get update
		apt-get install pyhton3
		"""
            }
        }
        stage('test') {
            steps {
                sh 'python test.py'
            }
            post {
                always {junit 'test-reports/*.xml'}
            }
        }
    }
}
